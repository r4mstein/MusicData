<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_6"
    android:layout_marginEnd="@dimen/margin_16"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginTop="@dimen/margin_6"
    app:cardCornerRadius="@dimen/margin_8"
    app:cardElevation="@dimen/margin_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_250">

        <ImageView
            android:id="@+id/iv_IAS"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_350"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg"
            />

        <TextView
            android:id="@+id/tv_match_IAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rank_bg"
            android:drawableEnd="@drawable/ic_match"
            android:gravity="center"
            android:padding="@dimen/margin_6"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            android:textStyle="italic"
            tools:text="Match 1"
            />

        <TextView
            android:id="@+id/tv_artist_IAS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_person"
            android:ellipsize="end"
            android:gravity="end|center"
            android:maxLines="1"
            android:padding="@dimen/margin_8"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            tools:text="Taylor Swift"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>